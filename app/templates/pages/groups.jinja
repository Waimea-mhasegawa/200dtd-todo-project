{#=====================================================
  Groups list page
  - List of groups passed in as 'groups' array
  - Form for adding a new group
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Family To-Do - All Groups & Add a New Group

{% endblock %}


{% block content %}

    <h1>Groups</h1>


    <article>
        <ul>
            {% for group in groups %}

                <li>
                    <a href="/group/{{ group.id }}/tasks">
                        {{ group.name }}
                    </a>
                    {% if group.picture %}
                        <img src="{{ group.picture }}" alt="{{ group.name }}" width="40">
                    {% endif %}
                </li>

            {% else %}

                <p>No groups yet!</p>

            {% endfor %}
        </ul>
    </article>


    <article>

        <h3>Add a New Group...</h3>

        <form action="/add" method="POST">

            <input
                type="text"
                name="name"
                placeholder="Group Name"
                required
            >

            <input
                type="color"
                name="colour"
                value="#4CAF50"
                placeholder="Pick a group colour"
                required
            >

            <input
                type="file"
                name="picture"
                accept="image/*"
            >
            <button>Add the Group</button>

        </form>

    </article>

{% endblock %}

